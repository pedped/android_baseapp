        <activity
            android:name="com.ata.activity.AC_ViewMelk"
            android:label="@string/title_activity_ac__view_melk"
            android:logo="@drawable/home_icon" >
        </activity>
        <activity
            android:name="com.ata.activity.AC_ViewMap"
            android:label="@string/title_activity_ac__view_map"
            android:logo="@drawable/home_icon"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" >
        </activity>
        <activity
            android:name="com.ata.activity.AC_SuggestMelkPhoneListner"
            android:label="@string/title_activity_ac__suggest_melk_phone_listner"
            android:logo="@drawable/home_icon" >
