<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <com.corebase.element.CustomTextView
                android:id="@+id/customTextView1"
                style="@style/acTutorial_Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="املاک گستر چیست"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/acTutorial_Image"
                style="@style/acTutorial_ImageStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/handshake" />

            <com.corebase.element.CustomTextView
                android:id="@+id/acTutorial_Info"
                style="@style/acTutorial_Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="املاک گستر جدیدترین روش ارتباط مشتری با مشاوران املاک می باشد، برای مشاهده مزایای استفاده از سامانه املاک گستر، کلید &apos;شروع&apos; را فشار دهید" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
