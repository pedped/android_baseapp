<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ataalla.amlakgostar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <permission
        android:name="com.edspace.restraunt.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.edspace.restraunt.permission.MAPS_RECEIVE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Amlakgostar" >

        <!-- Meta Keys For Google Map -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBjIlcNxCBSNUXNs5CBr-Qz_48jECtzvMw" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="5089000" />

        <!-- Activities -->
        <activity
            android:name="com.ata.coreapp.ListActivity"
            android:label="@string/app_name"
            android:logo="@drawable/home_icon" >
        </activity>
        <activity
            android:name="com.ata.activity.AC_LoginGoogle"
            android:label="@string/title_activity_ac__login"
            android:logo="@drawable/home_icon"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name="com.ata.activity.AC_Login"
            android:label="@string/title_activity_ac__login"
            android:logo="@drawable/home_icon" >
        </activity>
        <activity
            android:name="com.ata.activity.AC_Register"
            android:label="@string/title_activity_ac__register"
            android:logo="@drawable/home_icon" >
        </activity>
        <activity
            android:name="com.ata.activity.AC_ContactUs"
            android:label="@string/title_activity_ac__contact_us"
            android:logo="@drawable/home_icon" >
        </activity>
        <activity
            android:name="com.ata.activity.AC_ViewNotification"
            android:label="@string/title_activity_ac__view_notification"
            android:logo="@drawable/home_icon" >
        </activity>
        <activity
            android:name="com.ata.activity.AC_Home"
            android:label="@string/title_activity_ac__home"
            android:logo="@drawable/home_icon" >
        </activity>

        <!-- Boot Complete Receiver -->
        <receiver android:name="com.ata.broadcastreceiver.BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.amlakgostar.classes.AlarmReceiver"
            android:enabled="true" />

        <!-- Internet State Change -->
        <receiver android:name="com.ata.broadcastreceiver.NetworkStateChanged" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.ata.activity.AC_Master"
            android:label="@string/title_activity_ac__master"
            android:logo="@drawable/home_icon" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ata.activity.AC_ViewMelkRequest"
            android:label="@string/title_activity_ac__view_melk_request"
            android:logo="@drawable/home_icon" >
        </activity>
        <activity
            android:name="com.ata.activity.AC_AddMelk"
            android:label="@string/title_activity_ac__add_melk"
            android:logo="@drawable/home_icon" >
        </activity>
        <activity
            android:name="com.ata.activity.AC_SendMelkInfo"
            android:label="@string/title_activity_ac__send_melk_info"
            android:logo="@drawable/home_icon" >
