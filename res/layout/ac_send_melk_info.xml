<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ata.activity.AC_SendMelkInfo" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:gravity="right"
        android:orientation="vertical" >

        <com.corebase.element.CustomTextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="ارسال اطلاعات املاک به مشتری"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.corebase.element.CustomTextView
            android:id="@+id/acSendMelkInfo_txt_Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="TextView" />
    </LinearLayout>

    <com.corebase.unlimited.UnlimitedListView
        android:id="@+id/acSendMelkInfo_ul_Master"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </com.corebase.unlimited.UnlimitedListView>

    <com.corebase.element.CustomButton
        android:id="@+id/acSendMelkInfo_btn_Send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="ارسال" />

</LinearLayout>