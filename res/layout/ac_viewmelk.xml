<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ata.activity.AC_ViewMelk" >

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="260dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333"
        android:orientation="horizontal"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/acviewMelk_img_ViewOnMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/view_on_map" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.corebase.element.CustomTextView
                android:id="@+id/acViewMelk_txt_PropertyTitle"
                style="@style/property_info"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="تیتر ملک"
                android:textColor="#fff" />

            <com.corebase.element.CustomTextView
                android:id="@+id/acViewMelk_txt_PropertySection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Info"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/acViewMelk_ll_Baths"
                        style="@style/property_inofholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <com.corebase.element.CustomTextView
                            android:id="@+id/acViewMelk_txt_PropertyBaths"
                            style="@style/property_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Info" />

                        <com.corebase.element.CustomTextView
                            android:id="@+id/CustomTextView08"
                            style="@style/property_title"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="حمام و دستشویی" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/acViewMelk_ll_Bedroom"
                        style="@style/property_inofholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <com.corebase.element.CustomTextView
                            android:id="@+id/acViewMelk_txt_PropertyBeds"
                            style="@style/property_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="8dp"
                            android:text="Info" />

                        <com.corebase.element.CustomTextView
                            android:id="@+id/CustomTextView09"
                            style="@style/property_title"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="اتاق خواب" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/acViewMelk_ll_Zirbana"
                        style="@style/property_inofholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <com.corebase.element.CustomTextView
                            android:id="@+id/acViewMelk_txt_PropertyZirbana"
                            style="@style/property_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Info" />

                        <com.corebase.element.CustomTextView
                            android:id="@+id/CustomTextView07"
                            style="@style/property_title"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="زیربنا" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/acViewMelk_ll_PropertyMetraj"
                        style="@style/property_inofholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <com.corebase.element.CustomTextView
                            android:id="@+id/acViewMelk_txt_PropertyMetraj"
                            style="@style/property_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="8dp"
                            android:text="Info" />

                        <com.corebase.element.CustomTextView
                            android:id="@+id/CustomTextView06"
                            style="@style/property_title"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="متراژ" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/acViewMelk_ll_SalePrice"
                    style="@style/property_inofholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.corebase.element.CustomTextView
                        android:id="@+id/acViewMelk_txt_PropertySalePrice"
                        style="@style/property_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Info" />

                    <com.corebase.element.CustomTextView
                        android:id="@+id/CustomTextView01"
                        style="@style/property_title"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="قیمت فروش" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/acViewMelk_ll_RahnPrice"
                        style="@style/property_inofholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <com.corebase.element.CustomTextView
                            android:id="@+id/acViewMelk_txt_PropertyRahnPrice"
                            style="@style/property_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="8dp"
                            android:text="Info" />

                        <com.corebase.element.CustomTextView
                            style="@style/property_title"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="قیمت رهن" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/acViewMelk_ll_Ejare"
                        style="@style/property_inofholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <com.corebase.element.CustomTextView
                            android:id="@+id/acViewMelk_txt_PropertyEjare"
                            style="@style/property_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Info" />

                        <com.corebase.element.CustomTextView
                            style="@style/property_title"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="قیمت اجاره" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e5e5e5"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="12dp" >

                <com.corebase.element.CustomTextView
                    android:id="@+id/acViewMelk_txt_PropertyAddress"
                    style="@style/property_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="0dp"
                    android:text="Info"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <com.corebase.element.CustomTextView
                        android:id="@+id/acViewMelk_txt_PropertyPhone"
                        style="@style/property_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Info"
                        android:textSize="16sp" />

                    <com.corebase.element.CustomTextView
                        android:id="@+id/acViewMelk_txt_PropertyMobile"
                        style="@style/property_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Info"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>