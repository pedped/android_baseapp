        <activity
            android:name="com.ata.activity.AC_Intro"
            android:label="@string/title_activity_ac__intro"
            android:logo="@drawable/home_icon" >
        </activity>
        <activity
            android:name="com.ata.activity.AC_SMSCreditPlans"
            android:label="@string/title_activity_ac__smscredit_plans"
            android:logo="@drawable/home_icon" >
        </activity>
        <activity
            android:name=".AC_BongahPlans"
            android:label="@string/title_activity_ac__bongah_plans"
            android:logo="@drawable/home_icon" >
        </activity>
    </application>

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>