<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ata.activity.AC_ViewMap" >

    <fragment
        android:id="@+id/acViewOnMap_fr_Map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.google.android.gms.maps.MapFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:gravity="right"
        android:orientation="vertical" >

        <com.corebase.element.CustomTextView
            android:id="@+id/acViewOnMap_txt_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="آدرس"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <com.corebase.element.CustomButton
            android:id="@+id/acViewOnMap_btn_Navigate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="رفتن به موقعیت" />
    </LinearLayout>

</LinearLayout>